<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>Okuro - Inicio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>boots}}
    <!-- estilos especiales -->
    <link href="/static/css/dashboard.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <div class="row all-heigh ">
            {{> aside this}}
            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
                {{> header this titulo='Asignacion'}}
                <div class="row g-3">
                    <div class="col-12">
                        <h3>{{asignacion.titulo}}</h3>
                    </div>
                    <div class="col-12 mt-2">
                        <p>
                            <b>Titulo:</b> {{asignacion.instrucciones}}
                        </p>
                        <p>
                            <b>Fecha: </b>{{#parseFecha asignacion.asignado}}{{/parseFecha}} - {{#parseFecha asignacion.vencimiento}}{{/parseFecha}}
                        </p>
                        <p>
                            <b>Material:</b>
                        </p>
                        {{#each asig}}
                            <a href="{{ruta}}" download="{{../asignacion.titulo}}">Material - {{nombre}}</a><br>
                        {{/each}}
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#id</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Fecha de entrega</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each entregas}}
                                    <tr>
                                        <th scope="row">{{id_usuario}}</th>
                                        <td>{{nombre}}</td>
                                        <td>
                                            {{#if fecha}} 
                                                {{#parseFecha fecha}}{{/parseFecha}}
                                            {{else}}
                                                ---
                                            {{/if}}
                                        </td>
                                        <td><a class="btn btn-primary">Ver Entrega</a></td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- JavaScript -->
    {{>mensaje this}}
</body>

</html>